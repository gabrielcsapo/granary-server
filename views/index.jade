extends layout

block content
    div.container
        div.jumbotron.intro
            h1 Granary Server
            img.logo(src='/static/img/logo.svg', alt='Freight Server')
        hr
        p
            a.btn.btn-primary.btn-info(href='/granaries/active') View Granary Queue
            a.btn.btn-primary.btn(href='http://github.com/gabrielcsapo/granary-server') About Granary
        blockquote
            p
                | I have #{count.files} bundle(s) and #{count.projects} project(s) at the moment and I'm using around #{process.heap} of memory.
            small
                | Granary Server
        h1 Bundles
        each project, name in projects
            h3 #{name}
            table.table.table-striped.table-hover
                thead
                    tr
                        th Bundle Name
                        th Created
                        th Size
                        th Downloads
                        th Average Time
                        th File
                tbody
                    for file in project
                        tr
                            td
                                strong=file.name
                            td=file.details.ctime
                            td=file.details.size
                            td=file.downloads
                            td=file.avg_time
                            td
                                a.btn.btn-sm.btn-warning(type='button', href='/ui/delete/#{name}/#{file.name}') Delete
                                a.btn.btn-sm.btn-success(type='button', href='/ui/download/#{name}/#{file.name}') Download
